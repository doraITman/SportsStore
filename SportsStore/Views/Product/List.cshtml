@{
    Layout = "_Layout";
}
@model ProductListViewModel
<link rel="stylesheet" asp-href-include="~/**/*.min.css"
                       asp-href-exclude="**/*-reboot*,**/*-grid*" />

@foreach (var item in Model.Products){
    <div class="card card-header-tabs m-1 p-1">
    <div class = "bg-faded p-1">
        <h4>
            @item.Name
            <span class="badge-primary" style="float:right">
                 @item.Price.ToString("c") 
            </span> 
        </h4>

    </div>
    <div class="card-text p-1">@item.Description </div>
   </div>
}

<div page-model="@Model.PageInfo" page-action="List" page-classes-enable="true"
page-class="btn" page-class-normal="btn-secondary"
page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

